@model IEnumerable<BusTickets.Models.Schedule>
@{
    ViewBag.Title = "Schedule";
}

<div class="text-center">
    <h1>Schedule</h1>
</div>

<h1>                 </h1>
<h1>                 </h1>
<h2>Working days</h2>

<table class="table">
    <tr>
        <th>
            City
        </th>
        <th>
            Hour
        </th>
        <th>
            Day
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.DayId == 1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayId)
                </td>
            </tr>
        }
    }

</table>

