                    @Html.DisplayFor(modelItem => item.Hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSchedule", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteSchedule", new { id = item.Id })
                </td>
            </tr>
        }
    }

